{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "lib": ["es6", "dom", "es2021"],
      "allowJs": true,
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "types": ["node", "express"],
      "typeRoots": ["./node_modules/@types", "./src/types"],
      "declaration": true,
      "declarationMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
    },
    "include": ["src/**/*", "src/custom.d.ts"],
    "exclude": ["node_modules", "dist"]
  }